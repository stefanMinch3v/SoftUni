@model IEnumerable<CourseListingServiceModel>

@foreach (var course in Model)
{
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.Name</a>
            </div>
            <div class="panel-body">
                <img src="http://thecatapi.com/api/images/get?format=src&type=gif&guid=@(Guid.NewGuid())" class="img-responsive" />
                <br />
                <p class="text-center">
                    @course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()
                </p>
            </div>
        </div>
    </div>
}

