@model ArticleListingViewModel

@{
    ViewData["Title"] = "All Articles";
}

<h2>@ViewData["Title"]</h2>

<div class="row form-group">
    <form asp-action="Search">
        <div class="col-md-4">
            <input asp-action="Search" name="searchText" placeholder="Search..." class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="submit" name="submut" value="Search" class="btn btn-default" />
        </div>
    </form>
</div>

<div class="row">
    <div class="col-md-6">
        @await Html.PartialAsync("_ArticleListingsPartial.cshtml", Model.Articles)
    </div>
</div>

@if (Model.TotalArticles > 0)
{
    <ul class="pagination">
        <li class="@(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty)">
            <a asp-route-page="@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
}
