@model PartFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        @if (Model.IsEdit)
        {
            <input asp-for="Name" readonly class="form-control" />
        }
        else
        {
            <input asp-for="Name" required class="form-control" />
        }
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control"/>
        <span asp-validation-for="Quantity" class="form-text text-danger"></span>
    </div>
    @if (!Model.IsEdit)
    {
        <div class="form-group">
            <label asp-for="SupplierId"></label>
            <select class="form-control" asp-for="SupplierId" asp-items="@Model.Suppliers"></select>
            <span asp-validation-for="SupplierId" class="form-text text-danger"></span>
        </div>
    }
    <div>
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</form>



