@model CustomerFormModel

<!--Partial view, the syntax usually starts with _WhateverName, here its used for edit and add customer.-->

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="IsYoungDriver" />
        <label asp-for="IsYoungDriver"></label>
        <span asp-validation-for="IsYoungDriver" class="form-text text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</form>
