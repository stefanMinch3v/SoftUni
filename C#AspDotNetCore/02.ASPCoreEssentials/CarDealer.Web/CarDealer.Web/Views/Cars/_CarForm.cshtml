@model CarFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Make"></label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TravelledDistance"></label>
        <input asp-for="TravelledDistance" class="form-control" min="0" />
        <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DropDownParts"></label>
        <select asp-for="ChosenParts" asp-items="Model.DropDownParts" multiple class="form-control parts-select"></select>
        <small>*Hold Ctrl to select multple parts</small>
    </div>
    <div>
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</form>