@model IEnumerable<SaleListModel>

@{
    ViewData["Title"] = "Discounted";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Customer
            </th>
            <th>
                Discount
            </th>
            <th>
                Price
            </th>
            <th>
                Discounted Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>
                    @($"{sale.Id}. {sale.CustomerName}")
                </td>
                <td>
                    @((sale.Discount + (sale.IsYoungDriver ? 0.05 : 0)).ToPercentage())
                </td>
                <td>
                    @sale.Price.Value.ToPrice()
                </td>
                <td>
                    @sale.DiscountedPrice.ToPrice()
                </td>
            </tr>
        }
    </tbody>
</table>