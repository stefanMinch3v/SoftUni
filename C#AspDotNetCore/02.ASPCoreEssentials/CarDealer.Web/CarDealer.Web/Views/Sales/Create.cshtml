@model SaleFormModel

@{
    ViewData["Title"] = "Create Sale";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-5">
        <form method="post" action="/sales/reviewcreate" >
            <div class="form-group">
                <label asp-for="DropDownCustomers"></label>
                <select asp-for="CustomerId" asp-items="Model.DropDownCustomers" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="DropDownCars"></label>
                <select asp-for="CarId" asp-items="Model.DropDownCars" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Discount"></label>
                <input asp-for="Discount" type="number" class="form-control" min="0" step="1" max="100"/>
                <span asp-validation-for="Discount" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
