@model SaleReviewModel

@{
    ViewData["Title"] = "Review";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-5">
        <form method="post" action="finalizecreate">
            <div class="form-group">
                <label asp-for="Customer"></label>
                <input type="hidden" asp-for="CustomerId"/>
                <input asp-for="Customer" value="@Model.Customer" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Car"></label>
                <input type="hidden" asp-for="CarId" />
                <input asp-for="Car" value="@Model.Car" readonly class="form-control" />
            </div>
            @if (Model.IsYoungDriver)
            {
                <div class="form-group">
                    <label asp-for="Discount">Discount: @($"{Model.Discount.ToPercentage()} + (5%)")</label>
                    <input asp-for="Discount" value="@(Model.Discount + 5)" readonly class="form-control" />
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Discount">Discount: @Model.Discount.ToPercentage()</label>
                    <input asp-for="Discount" value="@Model.Discount" readonly class="form-control" />
                </div>
            }
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" value="@Model.Price" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FinalPrice"></label>
                <input asp-for="FinalPrice" value="@Model.FinalPrice" readonly class="form-control" />
            </div>
            <div class="form-group col-md-5">
                <a href="/sales/create" class="btn btn-default">Cancel</a>
                <input type="submit" value="Finalize" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
