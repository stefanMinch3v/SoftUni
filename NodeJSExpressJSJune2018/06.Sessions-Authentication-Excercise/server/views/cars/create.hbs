<h1>Create a car</h1>
<form method="post" action="/cars/create">
    <input required name="make" placeholder="enter make" value="{{make}}"/>
    <input required name="model" placeholder="enter model" value="{{model}}"/>
    <input required name="price" placeholder="enter price" value="{{price}}" type="number"/>
    <input required name="imageUrl" placeholder="enter image url" value="{{imageUrl}}"/>
    <input name="color", placeholder="enter color (optional)" value="{{color}}" />
    <input id="submit" type="submit" value="CREATE" />
</form>